<h3>Cliente</h3>
<hr>
<form action="/clientes/save" method="POST">
    <input type="hidden" name="id" value="{{cliente.id}}">
    <div class="form-group">
        <label for="txtnome">Nome:</label>
        <input type="text" name="nome" id="txtnome" value="{{cliente.nome}}" class="form-control" required >
    </div>
    <div class="form-group">
        <label for="txtnome" class="mt-3">Endere√ßo:</label>
        <input type="text" name="endereco" id="txtendereco" value="{{cliente.endereco}}" class="form-control">
    </div>
    <div class="form-group">
        <label for="txtnome" class="mt-3">Sexo:</label>
        <input type="text" name="sexo" id="txtsexo" value="{{cliente.sexo}}" class="form-control">
    </div>
    <div class="form-group">
        <label for="txtnome" class="mt-3">Telefone:</label>
        <input type="text" name="telefone" id="txttelefone" value="{{cliente.telefone}}" class="form-control">
    </div>
    <!--colocar demais campos do cliente-->
    <button type="submit" class="btn btn-primary mt-3">Enviar</button>
</form>